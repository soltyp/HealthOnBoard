<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthOnBoard.AdminPanelPage"
             Title="Panel Administratora">
    <StackLayout Padding="40,60" Spacing="30">

        <!-- Nagłówek strony -->
        <Label Text="Panel Administratora" 
               FontSize="32" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               Margin="0,20" />

        <!-- Przyciski w układzie pionowym z większymi rozmiarami -->
        <Button Text="Zarządzaj użytkownikami" 
                Clicked="OnManageUsersClicked" 
                FontSize="20" 
                Padding="20" 
                CornerRadius="10"
                BackgroundColor="#007ACC"
                TextColor="White" />

        <Button Text="Zarządzaj pacjentami" 
                Clicked="OnManagePatientsClicked" 
                FontSize="20" 
                Padding="20" 
                CornerRadius="10"
                BackgroundColor="#007ACC"
                TextColor="White" />

        <Button Text="Statystyki Pacjentów" 
                Clicked="OnStatisticsButtonClicked" 
                FontSize="20" 
                Padding="20" 
                CornerRadius="10"
                BackgroundColor="#007ACC"
                TextColor="White" />

    </StackLayout>
</ContentPage>
